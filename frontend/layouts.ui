// pub layout: Enum.Layout;
pub rows: Int;
pub columns: Int;

Rect {
  fill: #ddd;
  x1: -250px;
  x2: 200px;
  y1: -100px;
  y2: 200px;
  Layout {
    layout: .column;
    Pane for y in (rows) {
      Layout {
        Pane for x in (columns) {
          Rect {
            scaleToParent: 1;
            fill: (Brush.rgb(Math.random(), Math.random(), Math.random()));
            (x) " " (y)
          }
        }
      }
    }
  }
}